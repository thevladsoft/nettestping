<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0 http://www.kde.org/standards/kcfg/1.0/kcfg.xsd">
	<kcfgfile name=""/>

	<group name="General">
		<entry name="interval" type="int">
			<default>5000</default>
		</entry>
		<entry name="command" type="string">
			<default>PING=`ping -c 1 8.8.8.8 2>/dev/null|grep bytes |wc -l`;if [ "$PING" -gt 1 ];then echo "↑";else echo "↓";fi</default>
			<!-- <default>echo "&lt;a href=\"https://google.com\"&gt;Test $(date +%S)&lt;/a&gt;"</default> -->
		</entry>
		<entry name="waitForCompletion" type="bool">
			<default>true</default>
		</entry>
		<entry name="fontSize" type="int">
			<default>16</default>
		</entry>
		<entry name="fontFamily" type="string">
			<default></default>
		</entry>
		<entry name="bold" type="bool">
			<default>false</default>
		</entry>
		<entry name="italic" type="bool">
			<default>false</default>
		</entry>
		<entry name="underline" type="bool">
			<default>false</default>
		</entry>
		<entry name="textAlign" type="int">
			<!-- Text.AlignLeft: 1 -->
			<!-- Text.AlignHCenter: 4 -->
			<!-- Text.AlignRight: 2  -->
			<!-- Text.AlignJustify: 8  -->
			<default>1</default>
		</entry>
		<entry name="textColor" type="string">
			<default></default>
		</entry>
		<entry name="outlineColor" type="string">
			<default></default>
		</entry>
		<entry name="showOutline" type="bool">
			<default>false</default>
		</entry>
		<entry name="showBackground" type="bool">
			<default>true</default>
		</entry>
		<entry name="clickCommand" type="string">
			<default>PING=`ping -c 1 8.8.8.8 2>/dev/null|grep bytes |wc -l`;if [ "$PING" -gt 1 ];then echo "↑";else echo "↓";fi</default>
			<!-- <default>kdialog &#45;&#45;yesno "test"</default> -->
		</entry>
		<entry name="mousewheelUpCommand" type="string">
			<default></default>
		</entry>
		<entry name="mousewheelDownCommand" type="string">
			<default></default>
		</entry>
		<entry name="useFixedWidth" type="bool">
			<default>false</default>
		</entry>
		<entry name="fixedWidth" type="int">
			<default>100</default>
		</entry>
		<entry name="useFixedHeight" type="bool">
			<default>false</default>
		</entry>
		<entry name="fixedHeight" type="int">
			<default>100</default>
		</entry>
		<entry name="replaceAllNewlines" type="bool">
			<default>false</default>
		</entry>
	</group>

</kcfg>

